
<div style="text-align: center;">
<h3>Login</h3>
<%= form_tag sessions_path do %>
  <%= label_tag "Email" %>
  <%= text_field_tag :email %><br>
  <%= label_tag "Password" %>
  <%= password_field_tag :password %><br>
  <%= button_to "Login", welcome_path, :method => :get, class: 'btn btn-secondary' %>
</div>

  <hr>
  <div style="text-align: center;">
  <p><%= link_to "Click here to create an account", new_user_path %></p>
<% end %>
</div>

<% if flash[:alert] %>
    <div class="alert" style="text-align: center;"><%= flash[:alert] %></div>
  <% end %>
	
</div>
