<% if @user %>
	<section style="margin-left: 2.5rem;">
  <h1 style="">Welcome <%= @user.name %>!</h1><br />
	<%= button_to 'Add New Alcohol', new_alcohol_path, :method => :get, class: 'btn btn-secondary' %>
	<br>
</section>


<% else %>

	<div class="jumbotron" style="background-color: #e1e6ea7d">
    <div style="text-align: center;">

    <h1 class="display-4" style="text-align: center;">Welcome!</h1>
    <p class="lead" style="text-align: center;">Login or sign up to start tracking your booze!</p>
      <%= button_to "Login or Sign Up", login_path, :method => :get, class: 'btn btn-secondary'%>
    </div>
  </div>



<% end %>
<br />

<div class="card-deck" style='display: flex; margin: 0rem 2rem;'>
  <% @random_alcs.each do |alc| %>

  <div class="card" style="width: 16rem; margin: .5rem;">
    <div class="card-body">
      <h5 class="card-title"><%= alc.brand %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= alc.variety %></h6><%= alc.year %> - <%= alc.notes %></p>
     <%= link_to "More", alcohol_path(alc) %>
    </div>
  </div>
  <% end %>

</div>







