
<div style="margin-top: 2rem;text-align: center;">
<%= form_for @user do |f| %>

	<h4><%= f.label :name %></h4>
	<h4><%= f.text_field :name %><h4>

	<h4><%= f.label :email %><h4>
	<h4><%= f.email_field :email %><h4>

	<h4><%= f.label :password %><h4>
	<h4><%= f.password_field :password%><h4>

	<h4><%= f.label "Confirm Password" %><h4>
	<h4><%= f.password_field :password_confirmation %><h4>

	<!-- <div class="btn btn-secondary"><%= f.submit "Create Account" %> -->

		<%= button_to "Create Account", new_user_path, :method => :get, class: 'btn btn-secondary' %>

<% end %>
</div>
